<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shape layer for the background color -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="35dp" />
            <solid android:color="@color/lay" />
        </shape>
    </item>

    <!-- Border layer with a white color -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="35dp" />
            <solid android:color="@color/black" />
        </shape>
    </item>

</layer-list>
